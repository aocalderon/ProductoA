	author = {Wilson, Adam M. and Jetz, Walter},
	month = mar,
	year = {2016},
	note = {Publisher: Public Library of Science},
	keywords = {Remote sensing, Clouds, Biodiversity, Climatology, Cloud forests, Ecosystems, Meteorology, Seasons},
	pages = {e1002415},
	file = {Full Text PDF:/home/and/Zotero/storage/IUBNFGJ9/Wilson and Jetz - 2016 - Remotely Sensed High-Resolution Global Cloud Dynam.pdf:application/pdf},
}


