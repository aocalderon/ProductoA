@article{hansen_gis-based_2005,
	title = {{GIS}-based {Multi}-{Criteria} {Analysis} of {Wind} {Farm} {Development}},
	issn = {9173231266},
	abstract = {Due to the negative impact on the environment of traditional powergenerating methods, especially coal and oil-fired power stations wind power 
has increased in popularity. Achieving the goal set by the EU due to the implementation of the Kyoto protocol will require further expansion, and in order to 
facilitate this process around the Baltic Sea. A project – Wind Energy in the Baltic Sea Region - financed by EU / INTERREG III B was initiated in order to 
